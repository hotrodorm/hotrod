<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

<!-- 5. Attributes, no Elements, Text -->

  <xsd:element name="shoesize">
    <xsd:complexType>
      <xsd:simpleContent>
        <xsd:extension base="xsd:integer">
          <xsd:attribute name="country" type="xsd:string" />
        </xsd:extension>
      </xsd:simpleContent>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>