<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.product">

  <!-- columns -->

  <sql id="columns">
    id,
    name
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.id,
    ${alias}.name
  </sql>

  <resultMap id="allColumns" type="app.daos.ProductVO">
    <id property="id" column="id" />
    <result property="name" column="name" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from public.product
     where
      id = #{id,jdbcType=BIGINT}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from public.product
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null">
        and id = #{p.id,jdbcType=BIGINT}
      </if>
      <if test="p.name != null">
        and name = #{p.name,jdbcType=VARCHAR}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (no auto-generated columns) -->

  <insert id="insert">
    insert into public.product (
      <trim prefixOverrides=", ">
        <if test="true">, id</if>
        <if test="true">, name</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="true">, #{id,jdbcType=BIGINT}</if>
        <if test="true">, #{name,jdbcType=VARCHAR}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update public.product set
      name = #{name,jdbcType=VARCHAR}
     where
      id = #{id,jdbcType=BIGINT}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from public.product
     where
      id = #{id,jdbcType=BIGINT}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update public.product
    <set>
      <if test="values.id != null">id = #{values.id,jdbcType=BIGINT},</if>
      <if test="values.name != null">name = #{values.name,jdbcType=VARCHAR},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null">
        and id = #{filter.id,jdbcType=BIGINT}
      </if>
      <if test="filter.name != null">
        and name = #{filter.name,jdbcType=VARCHAR}
      </if>
    </trim>
  </update>

  <!-- update by criteria -->

  <select id="updateByCriteria">
    ${sql}
  </select>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from public.product
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null">
        and id = #{id,jdbcType=BIGINT}
      </if>
      <if test="name != null">
        and name = #{name,jdbcType=VARCHAR}
      </if>
    </trim>
  </delete>

  <!-- delete by criteria -->

  <select id="deleteByCriteria">
    ${sql}
  </select>

</mapper>
