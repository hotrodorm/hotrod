<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.testDefault1">

  <!-- columns -->

  <sql id="columns">
    name,
    price
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.name,
    ${alias}.price
  </sql>

  <resultMap id="allColumns" type="app.daos.TestDefault1VO">
    <result property="name" column="name" />
    <result property="price" column="price" />
  </resultMap>

  <!-- select by PK: no mapping generated, since the table does not have a PK -->

  <!-- select by unique indexes: no mappings generated, since the table does not have UIs -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from public.test_default1
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.name != null">
        and name = #{p.name,jdbcType=VARCHAR}
      </if>
      <if test="p.price != null">
        and price = #{p.price,jdbcType=INTEGER}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (no auto-generated columns) -->

  <insert id="insert">
    insert into public.test_default1 (
      <trim prefixOverrides=", ">
        <if test="true">, name</if>
        <if test="price != null">, price</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="true">, #{name,jdbcType=VARCHAR}</if>
        <if test="price != null">, #{price,jdbcType=INTEGER}</if>
      </trim>
      )
  </insert>

  <!-- update by PK: no update mapping generated, since the table does not have a PK -->

  <!-- delete by PK: no delete mapping generated, since the table does not have a PK -->

  <!-- update by example -->

  <update id="updateByExample">
    update public.test_default1
    <set>
      <if test="values.name != null">name = #{values.name,jdbcType=VARCHAR},</if>
      <if test="values.price != null">price = #{values.price,jdbcType=INTEGER},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.name != null">
        and name = #{filter.name,jdbcType=VARCHAR}
      </if>
      <if test="filter.price != null">
        and price = #{filter.price,jdbcType=INTEGER}
      </if>
    </trim>
  </update>

  <!-- update by criteria -->

  <select id="updateByCriteria">
    ${sql}
  </select>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from public.test_default1
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="name != null">
        and name = #{name,jdbcType=VARCHAR}
      </if>
      <if test="price != null">
        and price = #{price,jdbcType=INTEGER}
      </if>
    </trim>
  </delete>

  <!-- delete by criteria -->

  <select id="deleteByCriteria">
    ${sql}
  </select>

</mapper>
