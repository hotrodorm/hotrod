<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.player">

  <!-- columns -->

  <sql id="columns">
    id,
    cards
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.id,
    ${alias}.cards
  </sql>

  <resultMap id="allColumns" type="app.daos.PlayerMODEL">
    <id property="id" column="id" />
    <result property="cards" column="cards" typeHandler="app.daos.primitives.PlayerDAO$CardsTypeHandler" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from player
     where
      id = #{id,jdbcType=INTEGER}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from player
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null">
        and id = #{p.id,jdbcType=INTEGER}
      </if>
      <if test="p.cards != null">
        and cards = #{p.cards,jdbcType=ARRAY,typeHandler=app.daos.primitives.PlayerDAO$CardsTypeHandler}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (no auto-generated columns) -->

  <insert id="insert">
    insert into player (
      <trim prefixOverrides=", ">
        <if test="true">, id</if>
        <if test="true">, cards</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="true">, #{id,jdbcType=INTEGER}</if>
        <if test="true">, #{cards,jdbcType=ARRAY,typeHandler=app.daos.primitives.PlayerDAO$CardsTypeHandler}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update player set
      cards = #{cards,jdbcType=ARRAY,typeHandler=app.daos.primitives.PlayerDAO$CardsTypeHandler}
     where
      id = #{id,jdbcType=INTEGER}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from player
     where
      id = #{id,jdbcType=INTEGER}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update player
    <set>
      <if test="values.id != null">id = #{values.id,jdbcType=INTEGER},</if>
      <if test="values.cards != null">cards = #{values.cards,jdbcType=ARRAY,typeHandler=app.daos.primitives.PlayerDAO$CardsTypeHandler},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null">
        and id = #{filter.id,jdbcType=INTEGER}
      </if>
      <if test="filter.cards != null">
        and cards = #{filter.cards,jdbcType=ARRAY,typeHandler=app.daos.primitives.PlayerDAO$CardsTypeHandler}
      </if>
    </trim>
  </update>

  <!-- update by criteria -->

  <select id="updateByCriteria">
    ${sql}
  </select>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from player
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null">
        and id = #{id,jdbcType=INTEGER}
      </if>
      <if test="cards != null">
        and cards = #{cards,jdbcType=ARRAY,typeHandler=app.daos.primitives.PlayerDAO$CardsTypeHandler}
      </if>
    </trim>
  </delete>

  <!-- delete by criteria -->

  <select id="deleteByCriteria">
    ${sql}
  </select>

</mapper>
