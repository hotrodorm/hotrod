<?xml version="1.0"?>
<!DOCTYPE hotrod SYSTEM "hotrod.dtd">

<hotrod>

  <generators>
    <mybatis-spring>

      <daos package="com.myapp.daos" dao-suffix="DAO" vo-suffix="MODEL" abstract-vo-prefix=""
        abstract-vo-suffix="VO" />
      <mappers dir="mappers" namespace="bc"/>
      <classic-fk-navigation />
      <select-generation strategy="result-set" />
    </mybatis-spring>

  </generators>

  <table name="branch" implements="java.io.Serializable" />
  <table name="employee" implements="java.io.Serializable" />
  <view name="v2" implements="java.io.Serializable" />

  <dao name="Queries">
    <select method="findEmployees" vo="E" implements="java.io.Serializable" >
      <parameter name="ids" java-type="java.util.List&lt;Integer>" jdbc-type="NUMERIC" />
      <parameter name="names" java-type="java.util.List&lt;String>" jdbc-type="VARCHAR" />
      select *
      from employee
      <complement>
        where branch_id in
        <foreach item="id" collection="ids" open="(" separator=", " close=")">
          #{id}
        </foreach>
        or name in
        <foreach item="name" collection="names" open="(" separator=", " close=")">
          #{name}
        </foreach>
      </complement>
    </select>
  </dao>
<!--
-->

</hotrod>
