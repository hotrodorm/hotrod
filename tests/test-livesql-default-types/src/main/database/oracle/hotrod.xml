<hotrod>

  <generators>
    <mybatis-spring>
      <daos package="app.daos" dao-suffix="DAO" vo-suffix="VO" abstract-vo-prefix="Abstract" abstract-vo-suffix="VO" />
    </mybatis-spring>
  </generators>

  <converter name="odtconverter"
    java-raw-type="java.lang.Object"
    java-type="java.time.OffsetDateTime"
    class="app.OffSetDateTimeConverter"
  />

  <table name="invoice" />
  <table name="branch" />

  <table name="types_numeric" />
  <table name="types_char" />
  <table name="types_date_time">
    <column name="DAT3" java-type="java.time.OffsetDateTime" jdbc-type="TIMESTAMP" />
<!--
    <column name="dat3" converter="odtconverter" />
-->
  </table>
  <table name="types_binary" />
  <table name="types_other" /> 

</hotrod>
