<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.branch">

  <!-- columns -->

  <sql id="columns">
    id,
    "NaMe"
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.id,
    ${alias}."NaMe"
  </sql>

  <resultMap id="allColumns" type="app.daos.BranchVO">
    <id property="id" column="ID" />
    <result property="name" column="NaMe" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from user1.branch
     where
      id = #{id,jdbcType=NUMERIC}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from user1.branch
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null">
        and id = #{p.id,jdbcType=NUMERIC}
      </if>
      <if test="p.name != null">
        and "NaMe" = #{p.name,jdbcType=VARCHAR}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (no auto-generated columns) -->

  <insert id="insert">
    insert into user1.branch (
      <trim prefixOverrides=", ">
        <if test="true">, id</if>
        <if test="true">, "NaMe"</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="true">, #{id,jdbcType=NUMERIC}</if>
        <if test="true">, #{name,jdbcType=VARCHAR}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update user1.branch set
      "NaMe" = #{name,jdbcType=VARCHAR}
     where
      id = #{id,jdbcType=NUMERIC}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from user1.branch
     where
      id = #{id,jdbcType=NUMERIC}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update user1.branch
    <set>
      <if test="values.id != null">id = #{values.id,jdbcType=NUMERIC},</if>
      <if test="values.name != null">"NaMe" = #{values.name,jdbcType=VARCHAR},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null">
        and id = #{filter.id,jdbcType=NUMERIC}
      </if>
      <if test="filter.name != null">
        and "NaMe" = #{filter.name,jdbcType=VARCHAR}
      </if>
    </trim>
  </update>

  <!-- update by criteria -->

  <select id="updateByCriteria">
    ${sql}
  </select>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from user1.branch
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null">
        and id = #{id,jdbcType=NUMERIC}
      </if>
      <if test="name != null">
        and "NaMe" = #{name,jdbcType=VARCHAR}
      </if>
    </trim>
  </delete>

  <!-- delete by criteria -->

  <select id="deleteByCriteria">
    ${sql}
  </select>

</mapper>
