<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.branch">

  <!-- columns -->

  <sql id="columns">
    id,
    name,
    region,
    is_vip
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.id,
    ${alias}.name,
    ${alias}.region,
    ${alias}.is_vip
  </sql>

  <resultMap id="allColumns" type="app.daos.BranchVO">
    <id property="id" column="id" />
    <result property="name" column="name" />
    <result property="region" column="region" />
    <result property="isVip" column="is_vip" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from database1.branch
     where
      id = #{id,jdbcType=INTEGER}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from database1.branch
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null">
        and id = #{p.id,jdbcType=INTEGER}
      </if>
      <if test="p.name != null">
        and name = #{p.name,jdbcType=VARCHAR}
      </if>
      <if test="p.region != null">
        and region = #{p.region,jdbcType=VARCHAR}
      </if>
      <if test="p.isVip != null">
        and is_vip = #{p.isVip,jdbcType=BIT}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (no auto-generated columns) -->

  <insert id="insert">
    insert into database1.branch (
      <trim prefixOverrides=", ">
        <if test="true">, id</if>
        <if test="name != null">, name</if>
        <if test="region != null">, region</if>
        <if test="isVip != null">, is_vip</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="true">, #{id,jdbcType=INTEGER}</if>
        <if test="name != null">, #{name,jdbcType=VARCHAR}</if>
        <if test="region != null">, #{region,jdbcType=VARCHAR}</if>
        <if test="isVip != null">, #{isVip,jdbcType=BIT}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update database1.branch set
      name = #{name,jdbcType=VARCHAR},
      region = #{region,jdbcType=VARCHAR},
      is_vip = #{isVip,jdbcType=BIT}
     where
      id = #{id,jdbcType=INTEGER}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from database1.branch
     where
      id = #{id,jdbcType=INTEGER}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update database1.branch
    <set>
      <if test="values.id != null">id = #{values.id,jdbcType=INTEGER},</if>
      <if test="values.name != null">name = #{values.name,jdbcType=VARCHAR},</if>
      <if test="values.region != null">region = #{values.region,jdbcType=VARCHAR},</if>
      <if test="values.isVip != null">is_vip = #{values.isVip,jdbcType=BIT},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null">
        and id = #{filter.id,jdbcType=INTEGER}
      </if>
      <if test="filter.name != null">
        and name = #{filter.name,jdbcType=VARCHAR}
      </if>
      <if test="filter.region != null">
        and region = #{filter.region,jdbcType=VARCHAR}
      </if>
      <if test="filter.isVip != null">
        and is_vip = #{filter.isVip,jdbcType=BIT}
      </if>
    </trim>
  </update>

  <!-- update by criteria -->

  <select id="updateByCriteria">
    ${sql}
  </select>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from database1.branch
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null">
        and id = #{id,jdbcType=INTEGER}
      </if>
      <if test="name != null">
        and name = #{name,jdbcType=VARCHAR}
      </if>
      <if test="region != null">
        and region = #{region,jdbcType=VARCHAR}
      </if>
      <if test="isVip != null">
        and is_vip = #{isVip,jdbcType=BIT}
      </if>
    </trim>
  </delete>

  <!-- delete by criteria -->

  <select id="deleteByCriteria">
    ${sql}
  </select>

</mapper>
