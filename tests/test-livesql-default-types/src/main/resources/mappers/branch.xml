<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.branch">

  <!-- columns -->

  <sql id="columns">
    "ID",
    "NaMe",
    "REGION",
    "IS_VIP"
  </sql>

  <sql id="columnsWithAlias">
    ${alias}."ID",
    ${alias}."NaMe",
    ${alias}."REGION",
    ${alias}."IS_VIP"
  </sql>

  <resultMap id="allColumns" type="app.daos.BranchVO">
    <id property="id" column="ID" />
    <result property="name" column="NaMe" />
    <result property="region" column="REGION" />
    <result property="isVip" column="IS_VIP" typeHandler="app.daos.primitives.BranchDAO$IsVipTypeHandler" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from branch
     where
      "ID" = #{id,jdbcType=NUMERIC}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from branch
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null">
        and "ID" = #{p.id,jdbcType=NUMERIC}
      </if>
      <if test="p.name != null">
        and "NaMe" = #{p.name,jdbcType=VARCHAR}
      </if>
      <if test="p.region != null">
        and "REGION" = #{p.region,jdbcType=VARCHAR}
      </if>
      <if test="p.isVip != null">
        and "IS_VIP" = #{p.isVip,jdbcType=NUMERIC,typeHandler=app.daos.primitives.BranchDAO$IsVipTypeHandler}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (does not integrate sequences, and integrates identities) -->

  <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="ID">
    insert into branch (
      <trim prefixOverrides=", ">
        <if test="id != null">, "ID"</if>
        <if test="true">, "NaMe"</if>
        <if test="true">, "REGION"</if>
        <if test="true">, "IS_VIP"</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="id != null">, #{id,jdbcType=NUMERIC}</if>
        <if test="true">, #{name,jdbcType=VARCHAR}</if>
        <if test="true">, #{region,jdbcType=VARCHAR}</if>
        <if test="true">, #{isVip,jdbcType=NUMERIC,typeHandler=app.daos.primitives.BranchDAO$IsVipTypeHandler}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update branch set
      "NaMe" = #{name,jdbcType=VARCHAR},
      "REGION" = #{region,jdbcType=VARCHAR},
      "IS_VIP" = #{isVip,jdbcType=NUMERIC,typeHandler=app.daos.primitives.BranchDAO$IsVipTypeHandler}
     where
      "ID" = #{id,jdbcType=NUMERIC}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from branch
     where
      "ID" = #{id,jdbcType=NUMERIC}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update branch
    <set>
      <if test="values.id != null">"ID" = #{values.id,jdbcType=NUMERIC},</if>
      <if test="values.name != null">"NaMe" = #{values.name,jdbcType=VARCHAR},</if>
      <if test="values.region != null">"REGION" = #{values.region,jdbcType=VARCHAR},</if>
      <if test="values.isVip != null">"IS_VIP" = #{values.isVip,jdbcType=NUMERIC,typeHandler=app.daos.primitives.BranchDAO$IsVipTypeHandler},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null">
        and "ID" = #{filter.id,jdbcType=NUMERIC}
      </if>
      <if test="filter.name != null">
        and "NaMe" = #{filter.name,jdbcType=VARCHAR}
      </if>
      <if test="filter.region != null">
        and "REGION" = #{filter.region,jdbcType=VARCHAR}
      </if>
      <if test="filter.isVip != null">
        and "IS_VIP" = #{filter.isVip,jdbcType=NUMERIC,typeHandler=app.daos.primitives.BranchDAO$IsVipTypeHandler}
      </if>
    </trim>
  </update>

  <!-- update by criteria -->

  <select id="updateByCriteria">
    ${sql}
  </select>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from branch
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null">
        and "ID" = #{id,jdbcType=NUMERIC}
      </if>
      <if test="name != null">
        and "NaMe" = #{name,jdbcType=VARCHAR}
      </if>
      <if test="region != null">
        and "REGION" = #{region,jdbcType=VARCHAR}
      </if>
      <if test="isVip != null">
        and "IS_VIP" = #{isVip,jdbcType=NUMERIC,typeHandler=app.daos.primitives.BranchDAO$IsVipTypeHandler}
      </if>
    </trim>
  </delete>

  <!-- delete by criteria -->

  <select id="deleteByCriteria">
    ${sql}
  </select>

</mapper>
