<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bc.binaries">

  <!-- columns -->

  <sql id="columns">
    id,
    bin1,
    bol1
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.id,
    ${alias}.bin1,
    ${alias}.bol1
  </sql>

  <resultMap id="allColumns" type="app.daos.BinariesVO">
    <id property="id" column="id" />
    <result property="bin1" column="bin1" />
    <result property="bol1" column="bol1" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from binaries
     where
      id = #{id,jdbcType=INTEGER}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from binaries
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null">
        and id = #{p.id,jdbcType=INTEGER}
      </if>
      <if test="p.bin1 != null">
        and bin1 = #{p.bin1,jdbcType=BINARY}
      </if>
      <if test="p.bol1 != null">
        and bol1 = #{p.bol1,jdbcType=BIT}
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (no auto-generated columns) -->

  <insert id="insert">
    insert into binaries (
      <trim prefixOverrides=", ">
        <if test="true">, id</if>
        <if test="true">, bin1</if>
        <if test="true">, bol1</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="true">, #{id,jdbcType=INTEGER}</if>
        <if test="true">, #{bin1,jdbcType=BINARY}</if>
        <if test="true">, #{bol1,jdbcType=BIT}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update binaries set
      bin1 = #{bin1,jdbcType=BINARY},
      bol1 = #{bol1,jdbcType=BIT}
     where
      id = #{id,jdbcType=INTEGER}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from binaries
     where
      id = #{id,jdbcType=INTEGER}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update binaries
    <set>
      <if test="values.id != null">id = #{values.id,jdbcType=INTEGER},</if>
      <if test="values.bin1 != null">bin1 = #{values.bin1,jdbcType=BINARY},</if>
      <if test="values.bol1 != null">bol1 = #{values.bol1,jdbcType=BIT},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null">
        and id = #{filter.id,jdbcType=INTEGER}
      </if>
      <if test="filter.bin1 != null">
        and bin1 = #{filter.bin1,jdbcType=BINARY}
      </if>
      <if test="filter.bol1 != null">
        and bol1 = #{filter.bol1,jdbcType=BIT}
      </if>
    </trim>
  </update>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from binaries
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null">
        and id = #{id,jdbcType=INTEGER}
      </if>
      <if test="bin1 != null">
        and bin1 = #{bin1,jdbcType=BINARY}
      </if>
      <if test="bol1 != null">
        and bol1 = #{bol1,jdbcType=BIT}
      </if>
    </trim>
  </delete>

</mapper>
