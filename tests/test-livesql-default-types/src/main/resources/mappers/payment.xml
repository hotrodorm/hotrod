<mapper namespace="mappers.payment">

  <!-- columns -->

  <sql id="columns">
    payment_date,
    invoice_id,
    amount
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.payment_date,
    ${alias}.invoice_id,
    ${alias}.amount
  </sql>

  <resultMap id="allColumns" type="app.daos.PaymentVO">
    <result property="paymentDate" column="PAYMENT_DATE" />
    <result property="invoiceId" column="INVOICE_ID" />
