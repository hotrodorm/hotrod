<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <environments default="development">

    <environment id="development">

      <transactionManager type="JDBC" />

      <dataSource type="POOLED">
        <property name="driver" value="org.h2.Driver" />
        <property name="url" value="jdbc:h2:tcp://localhost:9092/./db1" />
        <property name="username" value="sa" />
        <property name="password" value="" />
      </dataSource>
      
      <!--
      <dataSource type="JNDI">
        <property name="data_source" value="java:comp/env/jdbc/myDS" />
      </dataSource>
      -->      

    </environment>

  </environments>

    <mappers>
    <mapper resource="./primitives/primitives-cliente.xml" />
    <mapper resource="./primitives/primitives-cuenta.xml" />
  </mappers>


</configuration>
