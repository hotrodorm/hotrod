<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hr3.springboot.poc.hotrod.primitives.persona">

  <!-- columns -->

  <sql id="columns">
    id,
    nombre,
    apellido,
    fecha_nacimiento
  </sql>

  <sql id="columnsWithAlias">
    ${alias}.id,
    ${alias}.nombre,
    ${alias}.apellido,
    ${alias}.fecha_nacimiento
  </sql>

  <resultMap id="allColumns" type="hr3.springboot.poc.hotrod.PersonaImpl">
    <id property="id" column="PER_ID" />
    <result property="nombre" column="PER_NOMBRE" />
    <result property="apellido" column="PER_APELLIDO" />
    <result property="fechaNacimiento" column="PER_FECHA_NACIMIENTO" />
  </resultMap>

  <!-- select by PK -->

  <select id="selectByPK" resultMap="allColumns">
    select
      <include refid="columns" />
     from pty_persona
     where
      id = #{id,jdbcType=BIGINT}
  </select>

  <!-- no select by unique indexes since there are no UI (besides the PK) -->

  <!-- select by example -->

  <select id="selectByExample" resultMap="allColumns">
    select
      <include refid="columns" />
     from pty_persona
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="p.id != null ">
        and id = #{p.id,jdbcType=BIGINT}
      </if>
      <if test="p.id == null and p.propertiesChangeLog.idWasSet">
        and id is null
      </if>
      <if test="p.nombre != null ">
        and nombre = #{p.nombre,jdbcType=VARCHAR}
      </if>
      <if test="p.nombre == null and p.propertiesChangeLog.nombreWasSet">
        and nombre is null
      </if>
      <if test="p.apellido != null ">
        and apellido = #{p.apellido,jdbcType=VARCHAR}
      </if>
      <if test="p.apellido == null and p.propertiesChangeLog.apellidoWasSet">
        and apellido is null
      </if>
      <if test="p.fechaNacimiento != null ">
        and fecha_nacimiento = #{p.fechaNacimiento,jdbcType=DATE}
      </if>
      <if test="p.fechaNacimiento == null and p.propertiesChangeLog.fechaNacimientoWasSet">
        and fecha_nacimiento is null
      </if>
    </trim>
    <if test="o != null">
      order by ${o}
    </if>
  </select>

  <!-- select by criteria -->

  <select id="selectByCriteria" resultMap="allColumns">
    ${sql}
  </select>

  <!-- insert (does not integrate sequences, and integrates identities) -->

  <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
    insert into pty_persona (
      <trim prefixOverrides=", ">
        <if test="id != null">, id</if>
        <if test="true">, nombre</if>
        <if test="true">, apellido</if>
        <if test="true">, fecha_nacimiento</if>
      </trim>
      ) values (
      <trim prefixOverrides=", ">
        <if test="id != null">, #{id,jdbcType=BIGINT}</if>
        <if test="true">, #{nombre,jdbcType=VARCHAR}</if>
        <if test="true">, #{apellido,jdbcType=VARCHAR}</if>
        <if test="true">, #{fechaNacimiento,jdbcType=DATE}</if>
      </trim>
      )
  </insert>

  <!-- update by PK -->

  <update id="updateByPK">
    update pty_persona set
      nombre = #{nombre,jdbcType=VARCHAR},
      apellido = #{apellido,jdbcType=VARCHAR},
      fecha_nacimiento = #{fechaNacimiento,jdbcType=DATE}
     where
      id = #{id,jdbcType=BIGINT}
  </update>

  <!-- delete by PK -->

  <delete id="deleteByPK">
    delete from pty_persona
     where
      id = #{id,jdbcType=BIGINT}
  </delete>

  <!-- update by example -->

  <update id="updateByExample">
    update pty_persona
    <set>
      <if test="values.propertiesChangeLog.idWasSet">id = #{values.id,jdbcType=BIGINT},</if>
      <if test="values.propertiesChangeLog.nombreWasSet">nombre = #{values.nombre,jdbcType=VARCHAR},</if>
      <if test="values.propertiesChangeLog.apellidoWasSet">apellido = #{values.apellido,jdbcType=VARCHAR},</if>
      <if test="values.propertiesChangeLog.fechaNacimientoWasSet">fecha_nacimiento = #{values.fechaNacimiento,jdbcType=DATE},</if>
    </set>
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="filter.id != null ">
        and id = #{filter.id,jdbcType=BIGINT}
      </if>
      <if test="filter.id == null and filter.propertiesChangeLog.idWasSet">
        and id is null
      </if>
      <if test="filter.nombre != null ">
        and nombre = #{filter.nombre,jdbcType=VARCHAR}
      </if>
      <if test="filter.nombre == null and filter.propertiesChangeLog.nombreWasSet">
        and nombre is null
      </if>
      <if test="filter.apellido != null ">
        and apellido = #{filter.apellido,jdbcType=VARCHAR}
      </if>
      <if test="filter.apellido == null and filter.propertiesChangeLog.apellidoWasSet">
        and apellido is null
      </if>
      <if test="filter.fechaNacimiento != null ">
        and fecha_nacimiento = #{filter.fechaNacimiento,jdbcType=DATE}
      </if>
      <if test="filter.fechaNacimiento == null and filter.propertiesChangeLog.fechaNacimientoWasSet">
        and fecha_nacimiento is null
      </if>
    </trim>
  </update>

  <!-- delete by example -->

  <delete id="deleteByExample">
    delete from pty_persona
    <trim prefix="where&#xA;" prefixOverrides="and |or ">
      <if test="id != null ">
        and id = #{id,jdbcType=BIGINT}
      </if>
      <if test="id == null and propertiesChangeLog.idWasSet">
        and id is null
      </if>
      <if test="nombre != null ">
        and nombre = #{nombre,jdbcType=VARCHAR}
      </if>
      <if test="nombre == null and propertiesChangeLog.nombreWasSet">
        and nombre is null
      </if>
      <if test="apellido != null ">
        and apellido = #{apellido,jdbcType=VARCHAR}
      </if>
      <if test="apellido == null and propertiesChangeLog.apellidoWasSet">
        and apellido is null
      </if>
      <if test="fechaNacimiento != null ">
        and fecha_nacimiento = #{fechaNacimiento,jdbcType=DATE}
      </if>
      <if test="fechaNacimiento == null and propertiesChangeLog.fechaNacimientoWasSet">
        and fecha_nacimiento is null
      </if>
    </trim>
  </delete>

</mapper>
