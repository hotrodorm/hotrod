<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" shutdownHook="disable">

  <Appenders>

    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout
        pattern="%style{%d{YYYY-MM-dd HH:mm:ss}}{gray} %highlight{%-5level }[%style{%T}{bright,blue}] %style{%C{1}(%L)}{bright,yellow}: %msg%n%throwable" />
    </Console>

  </Appenders>

  <Loggers>

    <Root level="info">
      <AppenderRef ref="Console" />
    </Root>

    <Logger name="org.hotrod.generator.mybatisspring.MyBatisSpringGenerator" level="debug" />
    <Logger name="org.hotrod.generator.HotRodContext" level="debug" />
    
  </Loggers>

</Configuration>
