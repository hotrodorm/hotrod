<archetype-descriptor
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
            https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
  xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="hotrod-jar-application">

  <requiredProperties>
  
    <requiredProperty key="package">
      <defaultValue />
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="persistencepackage">
      <defaultValue />
      <validationRegex />
    </requiredProperty>

    <requiredProperty key="springbootversion">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="hotrodversion">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="mybatisspringversion">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="debbieversion">
      <defaultValue>_UNDEFINED_</defaultValue>
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="sentinelversion">
      <defaultValue>_UNDEFINED_</defaultValue>
      <validationRegex />
    </requiredProperty>

    <requiredProperty key="jdbcdrivergroupid">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcdriverartifactid">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcdriverversion">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcdrivertype">
      <defaultValue>_UNDEFINED_</defaultValue>
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcdriverclassname">
      <validationRegex />
    </requiredProperty>

    <requiredProperty key="jdbcurl">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcusername">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcpassword">
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbccatalog">
      <defaultValue>_UNDEFINED_</defaultValue>
      <validationRegex />
    </requiredProperty>
    <requiredProperty key="jdbcschema">
      <defaultValue>_UNDEFINED_</defaultValue>
      <validationRegex />
    </requiredProperty>

  </requiredProperties>

  <fileSets>
    <fileSet filtered="true" packaged="true">
      <directory>src/main/java</directory>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/main/database</directory>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/main/hotrod</directory>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/main/resources</directory>
    </fileSet>
  </fileSets>

</archetype-descriptor>
    